import java.util.Scanner;
public class ex3 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in); 
      System.out.println("Insira o n√∫mero para quantidade de vezes que deseja imprimir: ");
      int n = scanner.nextInt(); 
      Scanner scanner2 = new Scanner(System.in); 
        System.out.println("Insira o caractere que deseja imprimir: ");
        
      char c = scanner2.nextLine().charAt(0); 
        
        for (int i = 1; i <= n; i++) { 
            for (int j = 1; j <= i; j++) { 
                System.out.print(c); 
            }
            System.out.println(); 
        }
    }}
