import java.util.Scanner;

public class ExercicioR017 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Digite um número: ");
        int numero = scanner.nextInt();
        int lerpar = 0;
        int somaimpar = 0;
        for (int i = 1; i <= numero; i++) {
            if (i % 2 == 0) {
                lerpar++;
            } else {
                somaimpar += i;
            }
        }
        System.out.println("A soma dos números ímpares de 1 até " + numero + " é: " + somaimpar);
        System.out.println("A quantidade de números pares de 1 até " + numero + " é: " + lerpar);
        scanner.close();
    }
}
